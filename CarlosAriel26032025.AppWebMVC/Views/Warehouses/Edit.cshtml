@model CarlosAriel26032025.AppWebMVC.Models.Warehouse

@{
    ViewData["Title"] = "Edit Warehouse";
}

<div class="container mt-5">
    <h1 class="text-center text-primary">Editar almacen</h1>

   
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="WarehouseName" class="form-label"></label>
                            <input asp-for="WarehouseName" class="form-control" placeholder="Enter warehouse name" />
                            <span asp-validation-for="WarehouseName" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success btn-lg">Guardas cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a class="btn btn-outline-secondary btn-lg" asp-action="Index">Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
