@model CarlosAriel26032025.AppWebMVC.Models.Warehouse

@{
    ViewData["Title"] = "Crear Almacen";
}

<div class="container mt-5">
    <h1 class="text-center">Crear Almacen</h1>

    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="WarehouseName" class="form-label"></label>
                    <input asp-for="WarehouseName" class="form-control" placeholder="Introdusca el nombre del almacen " />
                    <span asp-validation-for="WarehouseName" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success btn-lg">Creaar almacen</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a class="btn btn-outline-secondary" asp-action="Index">Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
